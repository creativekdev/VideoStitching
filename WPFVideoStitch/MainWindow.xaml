<Window x:Class="WPFVideoStitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFVideoStitch"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="767*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Import Videos" Click="Import_Videos"/>
                    <Separator />
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Merge" Click="VideoMerger_Click"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="_Help"/>
                    <MenuItem Header="_About"/>
                </MenuItem>
            </Menu>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                        Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Grid
                            Grid.Column="0">
                        <Button
                            x:Name="Merge"
                            Margin="10"                                
                            Click="VideoMerger_Click"
                            Content="Video Merge" />
                    </Grid>
                    <Grid
                            Grid.Column="2">
                        <Button
                            x:Name="ImportVideo"
                            Margin="10"                                
                            Click="Import_Videos"
                            Content="Import Videos" />
                    </Grid>
                    <Grid
                            Grid.Column="4">
                        <Button
                            x:Name="Synchronization"
                            Margin="10"                                
                            Click="Synchronization_Click"
                            Content="Synchronization" />
                    </Grid>
                    <Grid
                            Grid.Column="6">
                        <Button
                            x:Name="Stitch"
                            Margin="10"
                            Click="Stitch_Click"
                            Content="Stitch" />
                    </Grid>
                    <Grid
                            Grid.Column="8">
                        <Button
                            x:Name="Render"
                            Margin="10"
                            Click="Render_Click"
                            Content="Render" />
                    </Grid>
                </Grid>

                <Grid
                Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="10"
                >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="300" />

                    </Grid.ColumnDefinitions>
                    <Grid  Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border
                        x:Name="webcamContainer"
                       Grid.Row="0"
                        Width="300"
                        Height="300"
                        BorderBrush="Black"
                        BorderThickness="2">
                            <MediaElement x:Name="leftVideoCtl"  LoadedBehavior="Manual"  UnloadedBehavior="Stop" />
                        </Border>
                        <Slider Grid.Row="1" Width="300" VerticalAlignment="Center"/>

                    </Grid>
                    <Grid  Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border
                       Grid.Row="0"
                        Width="300"
                        Height="300"
                        BorderBrush="Black"
                        BorderThickness="2">
                            <MediaElement  x:Name="rightVideoCtl"  LoadedBehavior="Manual"  UnloadedBehavior="Stop"/>
                        </Border>
                        <Slider Grid.Row="1" Width="300" VerticalAlignment="Center"/>

                    </Grid>
                    <Grid  Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border
                       Grid.Row="0"
                        Width="300"
                        Height="300"
                        BorderBrush="Black"
                        BorderThickness="2">
                            <Image  x:Name="mergedVideoCtl"/>
                        </Border>
                        <Slider Grid.Row="1" Width="300" VerticalAlignment="Center"/>

                    </Grid>

                </Grid>


            </Grid>

        </DockPanel>
    </Grid>
</Window>
